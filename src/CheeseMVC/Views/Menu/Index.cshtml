@model List<CheeseMVC.Models.Menu>

    <h1>Menus</h1>
    
<ul>
        @foreach (var eachMenu in Model)
        {
            <li>
                  <a asp-controller="Menu" 
                     asp-action= "ViewMenu" 
                     asp-route-id ="@eachMenu.ID">eachMenu.Name</a>
            </li>

        }
    </ul>
<p><a asp-controller="Menu" asp-action="Add">Add Menu</a></p>